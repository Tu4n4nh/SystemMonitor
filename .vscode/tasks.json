{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build SystemMonitor",
            "type": "shell",
            "command": "cl.exe",
            "args": [
                "/EHsc",
                "main.cpp",
                "advapi32.lib"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$msCompile"]
        },
        {
            "label": "Build TestLog",
            "type": "shell",
            "command": "cl.exe",
            "args": [
                "/EHsc",
                "testlog.cpp",
                "advapi32.lib"
            ],
            "group": "build",
            "problemMatcher": ["$msCompile"]
        }
    ]
}
